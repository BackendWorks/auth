{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "plugins": ["@nestjs/swagger"],
        "assets": [
            {
                "include": "languages/**/*",
                "outDir": "dist",
                "watchAssets": true
            },
            {
                "include": "protos/**/*",
                "outDir": "dist",
                "watchAssets": true
            }
        ],
        "deleteOutDir": true,
        "watchAssets": true
    }
}
