{
  "name": "@backendworks/auth",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "postinstall": "npm run generate && npx typesync",
    "build": "nest build",
    "dev": "dotenv -e .env.local -- nest start --watch",
    "debug": "nest start --debug --watch",
    "generate": "prisma generate",
    "start": "node dist/main",
    "migrate": "dotenv -e .env.local -- prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "seed:permissions": "dotenv -e .env.local -- ts-node src/seeders/permissions.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/client": "^5.14.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.11",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "jest-junit": "^16.0.0",
    "moment": "^2.30.1",
    "nanoid": "5.0.7",
    "nestjs-command": "^3.1.4",
    "nestjs-i18n": "^10.4.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.7",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/config": "~3.3.4",
    "@types/eslint": "^8.56.10",
    "@types/eslint-config-prettier": "~6.11.3",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/express": "^4.17.21",
    "@types/faker": "~6.6.9",
    "@types/firebase": "^3.2.1",
    "@types/i18n": "^0.13.12",
    "@types/jest": "^29.5.12",
    "@types/lint-staged": "~13.3.0",
    "@types/nanoid": "~3.0.0",
    "@types/node": "^20.12.12",
    "@types/passport": "~1.0.16",
    "@types/passport-jwt": "~4.0.1",
    "@types/pg": "^8.11.6",
    "@types/prettier": "^2.7.3",
    "@types/rimraf": "^3.0.2",
    "@types/source-map-support": "~0.5.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false,
    "tabWidth": 2,
    "overrides": [
      {
        "files": "*.yml",
        "options": {
          "tadWidth": 2,
          "printWidth": 40,
          "singleQuote": true
        }
      }
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": ".",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix",
    "*.{ts,js,json,md}": "prettier --write"
  }
}
